<?xml version="1.0" encoding="utf-8"?>
<com.videomaker.photovideoeditorwithanimation.view.ScaleCardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4.0dip"
    android:layout_marginTop="4.0dip"
    android:layout_marginRight="4.0dip"
    android:layout_marginBottom="2.0dip"
    app:aspectRatioHeight="1"
    app:aspectRatioWidth="1"
    app:cardBackgroundColor="@color/m_black_less_than_40_opacity"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="4.0dip">

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true"

        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageView1"
        android:background="@drawable/bg_selection"
        android:button="@null"

        android:checked="true" />

    <View
        android:id="@+id/clickableView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_transparent"
        android:clickable="true" />

    <TextView
        android:id="@+id/tvThemeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivThumb"
        android:layout_gravity="bottom"
        android:background="#80AFB0B6"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_9sdp" />
</com.videomaker.photovideoeditorwithanimation.view.ScaleCardLayout>